
<div class="row mt-5 justify-content-center" style="margin-bottom: 5%;margin-top:5%">
    <div class="col-md-5">
        <div class="card card-default ">
            <div class="card-header"><h5>عضویت در سایت</h5></div>
            <div class="card-body ">
                <form class="form-horizontal " method="POST" action="/auth/register" novalidate>

                    <%- include(viewPath('layouts/error-messages')) -%>
                    
                    <div class="form-group">
                        <label for="name" class="control-label">نام کامل</label>
                        <input id="name" type="text" class="form-control" name="name" value="<%=  old('name') %>" required>
                    </div>
                    <div class="form-group">
                        <label for="mid" class="control-label">کدملی</label>
                        <input id="mid" type="text" class="form-control" name="mid" value="<%=  old('name') %>" required>
                    </div>

                    <div class="form-group">
                        <label for="phoneNumber" class="control-label">شماره تلفن </label>
                        <input id="phoneNumber" type="text" class="form-control" name="phoneNumber" value="<%=  old('email') %>" required="">
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label">پسورد</label>
                        <input id="password" type="password" class="form-control" name="password" value="<%=  old('password') %>" required="">
                    </div>


                    <% /* %>    <div class="form-group">
                        <%- recaptcha %>
                    </div>
                    <% */ %>



                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">عضویت</button>
                        <a href="/auth/login" class="btn btn-danger">قبلا ثبت نام کرده ام</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
