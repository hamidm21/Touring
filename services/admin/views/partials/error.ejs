<% if (locals.errors) { %>
    <div class="mb-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="display: flex;">
                <!-- <span class="alert-inner--icon"><i class="ni ni-like-2"></i></span> -->
                <span class="alert-inner--text"> <%= locals.errors %> </span>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    </div>
<% }%>